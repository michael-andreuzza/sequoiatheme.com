---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/color/Hero.astro";
import Content from "../components/color/Content.astro";
import Footer from "../components/global/Footer.astro";
import { AstroSeo } from "@astrolib/seo";
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="Sequoia Theme | Color palettes"
  description="Black, elegant, modern and gentle theme for VS Code and other UI's"
  canonical="https://www.sequoiatheme.com"
  openGraph={{
    url: "https://www.sequoiatheme.com",
    title: "Sequoia Theme",
    description: "Black, elegant, modern and gentle theme for VS Code and other UI's",
    images: [
      {
        url: "https://www.sequoiatheme.com/og.png",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpeg",
      },
      {
        url: "https://www.sequoiatheme.com/twitter.png",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
      { url: "https://www.sequoiatheme.com/opengraph/social-og.jpg" },
      { url: "https://www.sequoiatheme.com/opengraph/twitter-og.jpg" },
    ],
    site_name: "Sequoia Theme",
  }}
  twitter={{
    handle: "@mike_Andreuzza",
    site: "@site",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout>
  <Hero />
  <Content />
  <Footer />
</BaseLayout>
